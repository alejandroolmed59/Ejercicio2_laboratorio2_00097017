<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_column="3"
    android:layout_row="3">

    <ImageView
        android:id="@+id/img1"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img01"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img02"/>
    <ImageView
        android:id="@+id/img3"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img03"/>
    <ImageView
        android:id="@+id/img4"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img04"/>
    <ImageView
        android:id="@+id/img5"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img05"/>
    <ImageView
        android:id="@+id/img6"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img06"/>
    <ImageView
        android:id="@+id/img7"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img07"/>
    <ImageView
        android:id="@+id/img8"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img08"/>
    <ImageView
        android:id="@+id/img9"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="@dimen/default_image_dim"
        android:layout_height="@dimen/default_image_dim"
        android:src="@drawable/img09"/>

</GridLayout>